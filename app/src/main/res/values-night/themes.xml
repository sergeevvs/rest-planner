<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RestPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ActionBar styling -->
        <item name="actionBarTheme">@style/RestPlanner.ActionBarThemeOverlay</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nightPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/nightPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/nightPrimaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nightSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/nightSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/nightSecondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Other colors. -->

        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/RestPlanner.BottomSheetDialog</item>
        <item name="android:textViewStyle">@style/RestPlanner.TextView</item>
        <item name="checkboxStyle">@style/RestPlanner.CheckBox</item>
        <item name="switchStyle">@style/RestPlanner.Switch</item>
        <!-- Custom attrs. -->
        <item name="colorBottomSheetDialog">@color/dark_gray</item>
        <item name="colorTextOnBottomSheetDialog">@color/white</item>
    </style>
</resources>