<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RestPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Other colors. -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/RestPlanner.BottomSheetDialog</item>
        <item name="android:textViewStyle">@style/RestPlanner.TextView</item>
        <item name="radioButtonStyle">@style/RestPlanner.RadioButton</item>
        <item name="checkboxStyle">@style/RestPlanner.CheckBox</item>
        <item name="switchStyle">@style/RestPlanner.Switch</item>
        <!-- Custom attrs. -->
        <item name="colorBottomSheetDialog">@color/black</item>
        <item name="colorTextOnBottomSheetDialog">@color/white</item>
    </style>
</resources>